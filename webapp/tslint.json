{
  "extends": ["tslint-react", "tslint-plugin-prettier", "dcl-tslint-config-standard"],
  "rules": {
    "no-commented-out-code": false,
    "jsx-no-multiline-js": false,
    "ban-types": [true, "Number", "Boolean", "String", "Object"],
    "prettier": [true, { "printWidth": 80, "singleQuote": true, "semi": false }],
    "quotemark": [true, "single", "jsx-double"]
  },
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts", "./**/*.js"]
  }
}
